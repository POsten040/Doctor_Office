@{
  Layout = "_Layout";
}

@using Doctor_Office.Models;
@model List<Doctor_Office.Models.Patient>;

@if (@Model.Count == 0)
{
  <h3>No Patients Here!</h3>
}

<nav class="navbar navbar">
  <div class="container-fluid">
    <ul class="nav navbar-nav">
    <button type="button" class="btn">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span><li>@Html.ActionLink("Add Patient", "Create")</li>
    </button>

    <button type="button" class="btn">
    <span class="glyphicon glyphicon-book" aria-hidden="true"></span>
        <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown">Patients<span class="caret"></span></a>
        <ul class="dropdown-menu">
          @foreach (Patient patient in Model)
          {
            <button type="button" class="btn">
              <span class="glyphicon glyphicon-user" aria-hidden="true"></span><li>@Html.ActionLink($"{patient.Name}", "Details", new { id = patient.PatientId })</li>
            </button>
          }
        </ul>
      </li>
    </button>
    </ul>
  </div>
</nav>