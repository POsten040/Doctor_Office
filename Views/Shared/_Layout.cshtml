<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Doctor Office</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel="stylesheet" type="text/css" href="~/css/styles.css">
  </head>
  <body>
    <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <ul class="nav navbar-nav">
      <button type="button" class="btn btn-dark">
          <span class="glyphicon glyphicon-home" aria-hidden="true"></span><li>@Html.ActionLink("Home", "Index", "Home")</li>
        </button>
        
        <button type="button" class="btn btn-dark">
          <span class="glyphicon glyphicon-user" aria-hidden="true"></span><li>@Html.ActionLink("See all patients", "Index", "Patients")</li>
        </button>
        
        <button type="button" class="btn btn-dark">
          <span class="glyphicon glyphicon-stats" aria-hidden="true"></span><li>@Html.ActionLink("See all doctors", "Index", "Doctors")</li>
        </button>
      </ul>
    </div>
  </nav>
    <div id="info">
      @RenderBody()
    </div>
  </body>
</html>