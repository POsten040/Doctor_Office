@{
  Layout = "_Layout";
}

@model Doctor_Office.Models.Specialty;

<h2>Specialty Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

<ul>
@if (@Model.Doctors.Count == 0)
{
  <p>No doctors found</p>
}
else
{
  <h4>Doctors with this specialty:</h4>
  @foreach (var join in @Model.Doctors)
  {
    <p>@join.Doctor.Name</p>
  }
}
</ul>


<nav class="navbar navbar">
  <div class="container-fluid">
    <ul class="nav navbar-nav"> 
      <button type="button" class="btn btn-dark">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><li>@Html.ActionLink("Edit Specialty", "Edit", new { id = Model.SpecialtyId })</li>
      </button>
          
      <button type="button" class="btn btn-dark">
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span><li>@Html.ActionLink("Delete Specialty", "Delete", new { id = Model.SpecialtyId })</li>
      </button>
    </ul>
  </div>
</nav>