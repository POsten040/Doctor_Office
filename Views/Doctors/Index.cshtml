@{
  Layout = "_Layout";
}

@using Doctor_Office.Models;
@model List<Doctor_Office.Models.Doctor>;

@if (@Model.Count == 0)
{
  <h3>No Doctors Here!</h3>
}


<nav class="navbar navbar">
  <div class="container-fluid">
    <ul class="nav navbar-nav">
    <button type="button" class="btn" id="newBtn">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span><li>@Html.ActionLink("Add Doctor", "Create")</li>
      </button>

      <button type="button" class="btn">
        <span class="glyphicon glyphicon-book" aria-hidden="true"></span>
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown">Doctors<span class="caret"></span></a>
          <ul class="dropdown-menu">
            @foreach (Doctor doctor in Model)
            {
              <button type="button" class="btn">
                <span class="glyphicon glyphicon-user" aria-hidden="true"></span><li>@Html.ActionLink($"{doctor.Name}", "Details", new { id = doctor.DoctorId })</li>
              </button>
            }
          </ul>
        </li>
      </button>
    </ul>
  </div>
</nav>